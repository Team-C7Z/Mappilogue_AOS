<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_today_place_main_container"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_rec_radius_12"
            android:backgroundTint="@color/gray_1_5"
            android:padding="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <TextView
                android:id="@+id/item_today_place_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="아주 건강해지는 제이슨 건강원"
                style="@style/Title_02"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxWidth="250dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/item_today_place_dot_iv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageView
                android:id="@+id/item_today_place_dot_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dot_gary_4_3dp"
                android:layout_marginStart="6dp"
                app:layout_constraintStart_toEndOf="@id/item_today_place_tv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/item_today_place_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                tools:text="9:00 AM"
                style="@style/Body_02"
                android:textColor="@color/gray_4"
                app:layout_constraintStart_toEndOf="@id/item_today_place_dot_iv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>