<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mappilogue_AOS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/gray_1</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/gray_1</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="YearMonthPicker">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HourMinutePicker">
        <item name="android:textSize">23sp</item>
        <item name="fontFamily">@font/pretendard_semibold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CalendarYearMonthPicker">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TodoAlarmDatePicker">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="lineHeight">28dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- font style -->
    <style name="Title_01" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">20dp</item>
        <item name="lineHeight">30dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Title_02" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">16dp</item>
        <item name="lineHeight">24dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Subtitle_01" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">18dp</item>
        <item name="lineHeight">28dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Body_01" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">16dp</item>
        <item name="lineHeight">24dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Body_02" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">14dp</item>
        <item name="lineHeight">21dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Body_03" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14dp</item>
        <item name="fontFamily">@font/pretendard_semibold</item>
        <item name="lineHeight">21dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Caption_01" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">12dp</item>
        <item name="lineHeight">18dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Caption_02" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">12dp</item>
        <item name="lineHeight">18dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Caption_03" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">10dp</item>
        <item name="lineHeight">15dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ChipTextStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24dp</item>
        <item name="android:textColor">@color/selector_add_todo_chip_text</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Material3.BottomSheet.Modal" >
        <item name="android:background">@drawable/bg_white_upper_24</item>
    </style>

    <style name="BottomSheet" parent="Theme.Material3.DayNight.BottomSheetDialog" >
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

</resources>
